<p id="notice"><%= notice %></p>

<h1>Repairs</h1>
<br>
<div class="container">
    <div class="row">
<%= link_to 'New Repair', new_repair_path, class: "btn btn-primary" %>
</div>
</div>
<br>
<div class="container">
    <div class="row">
      <div class="table-responsive">
        <table class="table table-hover">

  <thead>
    <tr>
      <th>Model name</th>
      <th>Repair price</th>
      <th>Part cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @repairs.each do |repair| %>
      <tr>
        <td><%= repair.cellphone_model %></td>
        <td><%= repair.repair_price %></td>
        <td><%= repair.part_cost %></td>
        <td><%= link_to 'Show', repair %></td>
        <td><%= link_to 'Edit', edit_repair_path(repair) %></td>
        <td><%= link_to 'Destroy', repair, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="container">
    <div class="row">
<%= link_to 'New Repair', new_repair_path, class: "btn btn-primary" %>
</div>
</div>
