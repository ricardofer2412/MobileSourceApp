


<div class="col-xs-12">
<%= simple_form_for(@order) do |f| %>
  <div id="invoice-wrap">
    <%= f.error_notification %>
    <div class="row">
      <div class="col-xs-12">
        <h3 class="page-header">Purchae Orders<small class="pull-right">Due Date: <span class="invoice_header_date"></span></small></h3>
      </div><!-- /.col -->
    </div>

    <div class="row invoice-info">
      <div class="col-xs-4 invoice-col">
      <strong>  Vendor: </strong>
      <div class="form-group">
        <address>
          <%= f.input_field :custumer_name, class: "form-control", id: "1", placeholder: "Name" %>
          <input class="form-control" id= "2"  placeholder="address line 1" />
          <input class="form-control" id= "3"  placeholder="address line 2" />
          <input class="form-control" id= "5"  placeholder="address line 3" />
          <input class="form-control" id= "4"  placeholder="phone number" />
        </address>
      </div>
        <div class="form-group">
          <div class="col-xs-6"><label>Payable To:</label></div>
          <div class="col-xs-8 invoice_num"><span id="invoice_number">  </span><%= f.input_field :payable,  class:"form-control" %></div>
        </div>
      </div><!-- /.col -->
      <div class="col-xs-4 invoice-col">

      </div><!-- /.col -->
      <div class="col-xs-4 invoice-col">
        <form class="form-horizontal">

          <div class="form-group">
            <div class="col-xs-6"><label>Invoice #</label></div>
            <div class="col-xs-8 invoice_num"><span id="invoice_number">  </span><%= f.input_field :ponumber,  class:"form-control" %></div>
          </div>
          <div class="col-xs-12"></div>
          <div class="form-group">
            <div class="col-xs-6"><%= f.label :due_date, required: false %></div>
            <div class="col-xs-8"><%= f.input_field :due_date, class: "form-control datepicker", as: :string, id: "invoice_date" %></div>
          </div>
          <div class="col-xs-12"></div>
          <div class="form-group">
            <div class="col-xs-6"><%= f.label :expectedDate, required: false %></div>
            <div class="col-xs-8"><%= f.input_field :expectedDate, class: "form-control datepicker", as: :string, id: "invoice_date" %></div>
          </div>

          <div class="col-xs-12"></div>
          <div class="form-group">
            <div class="col-xs-6"><%= f.label :payment_sent, required: false %></div>
            <div class="col-xs-8"><%= f.input_field :payment_sent, class: "form-control datepicker", as: :string, id: "invoice_date" %></div>
          </div>


          <div class="col-xs-12"></div>
          <div class="form-group">
            <div class="col-xs-5 invoice_space"><label>Quoted Amount</label></div>
            <div class="col-xs-7 invoice_space bold" style="text-align:right; padding-top:7px"><span class="due">0.00</span><span class="subtotal_currency"></span></div>
          </div>
        </form>
      </div><!-- /.col -->
    </div><!-- /.row -->

    <div class="row">
      <div class="col-xs-12 table-responsive">
        <hr>
        <table class="table table-hover" id="items">

          <thead>
              <th class="item-name">Carrier</th>
              <th class="description">Model</th>
              <th class="unit">Unit Cost</th>
              <th class="quantity">Quantity</th>
              <th class="units">Price</th>
              <th class="no_print">Actions</th>
          </thead>

          <tbody>
            <tr class="item-row">
              <td><input class="form-control item_name" value="Carrier" /></td>
              <td><input class="form-control item_desc" value="Model" /></td>
              <td><input class="form-control cost" value="0.00" /></td>
              <td><input class="form-control qty" value="1" /></td>
              <td class="price_td"><span class="price">0.00</span><span class="subtotal_currency"></span></td>
              <td class="delete_td"><a class="delete" href="javascript:;" title="Remove row"><span class="ti-close"></span></a></td>
            </tr>

            <tr class="item-row">
              <td><input class="form-control item_name" value="Carrier" /></td>
              <td><input class="form-control item_desc" value="Model" /></td>
              <td><input class="form-control cost" value="0.00" /></td>
              <td><input class="form-control qty" value="1" /></td>
              <td class="price_td"><span class="price">0.00</span><span class="subtotal_currency"></span></td>
              <td class="delete_td"><a class="delete" href="javascript:;" title="Remove row"><span class="ti-close"></span></a></td>
            </tr>

            <tr id="hiderow">
              <td colspan="6"><a id="addrow" class="btn btn-success btn-sm" href="javascript:;" title="Add a row"><span class="ti-plus"></span>  Add a row</a></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-6 col-xs-offset-6">
        <div class="table-responsive">
          <table class="table table-hover" id="totals">
            <tr>
              <th style="width:75%">Total:</th>
              <td><span id="subtotal">0.00</span><span class="subtotal_currency"></span></td>
            </tr>


          </table>
        </div>
      </div><!-- /.col -->
    </div>

    <div class="row">
      <div class="col-xs-12 pull-left">
        <a class="btn btn-info btn-sm" id="invoice_button" data-toggle="modal" data-target="#invoice_modal">Show Purchase Order</a>
        <%= f.button :submit, 'Update PO', class: 'btn btn-warning btn-sm', id: "submit_invoice" %>
      </div>
    </div>

    <div id="terms">
      <h5>Terms</h5>
      <h5>THIS QUOTE IS VALID FOR 30 DAYS</h5>
      <textarea id="10"> We do not buy  iPhones with "FIND MY IPHONE" feature ON or Devices that have an stading balance with the carrier </textarea>
    </div>
  </div>
  <% end %>
</div>

<div class="modal fade" id="invoice_modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
  <div class="modal-dialog modal-lg">
    <div class="modal-content" style="width:920px">
      <div class="container-fluid invoice_wrapper" style="margin:10px" id="print-me">
        <%= render 'po' %>
      </div>
      <div class="modal-footer">
        <button class="btn btn-primary" onclick="printDiv('print-me')">Print</button>
      </div>
    </div>
  </div>
</div>
