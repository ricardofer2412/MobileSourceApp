


<h1>Purchase Orders</h1>
<p id="notice"><%= notice %></p>
<div class="container">
    <div class="row">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <%= form_tag(orders_path, :method => 'get') do %>
            <%= text_field_tag :search, params[:search]%>
            <%= submit_tag 'Search' %>
            <% end %>
            <tr>
      <th><%= link_to "PO", :sort => "ponumber"%></th>
      <th><%= link_to "Customer Name", :sort => "custumer_name" %></th>
      <th>E-mail</th>
      <th><%= link_to "Status", :sort => "status" %></th>
      <th><%= link_to "Payment Type", :sort => "terms"%></th>
      <th><%= link_to "Last Updated", :sort => "updated_at" %></th>
      <th><%= link_to "Payment Sent", :sort => "payment_sent" %></the>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.ponumber %></td>
        <td><%= order.custumer_name %></td>
        <td><%= order.email %></td>
        <td><%= order.status %></td>
        <td><%= order.terms %></td>
        <td><%= order.updated_at%></td>
        <td><%= order.payment_sent%></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Delete', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
    <%= will_paginate @orders, renderer: BootstrapPagination::Rails%>
 </div>
</div>

<%= link_to 'New Order', new_order_path, class: "btn btn-primary" %>
