

<p id="notice"><%= notice %></p>

<h1>NEXTEL ACCOUNTS DASHBOARD</h1>

<div class="container">
  <di v class="row">
     <div class="col-sm">
          <%= link_to 'New Account', new_account_path %>
        </div>

  </div>

<div class="container">
    <div class="row">
      <div class="table-responsive">
        <table class="table table-hover">
  <thead>
    <%= form_tag(accounts_path, :method => 'get') do %>
    <%= text_field_tag :search, params[:search]%>
    <%= submit_tag 'Search' %><br>
    <% end %>
<br>
    <tr>
      <th><%= sortable "customer_name"%></th>
      <th><%= "Device"%></th>
      <th><%= sortable "balance"%></th>
      <th><%= sortable "expiration_date"%></th>
      <th><%= sortable "account_status"%></th>
      <th><%= "Sim Card Number"%></th>
      <th><%= "Phone Number"%></th>
      <th><%= sortable "updated_at"%></th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.customer_name %></td>
        <td><%= account.nickname %></td>
        <td><%= account.balance %></td>
        <td><%=  account.expiration_date %></td>
        <td><%= account.account_status %></td>
        <td><%= account.simcardNumber %></td>
        <td><%= account.phoneNumber %></td>
        <td><%= account.updated_at %>
        <td><%= link_to 'Show', account %></td>
        <td><%= link_to 'Edit', edit_account_path(account) %></td>
        <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= button_to 'Get Balance', account, method: :fetch_single_balance, data: { confirm: 'Do you want to update balance?' }  %></td>

      </tr>
    <% end %>
  </tbody>
</table>
    </div>
  </div>
</div>
<%= link_to 'New Account', new_account_path %>
