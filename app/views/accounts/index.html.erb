<p id="notice"><%= notice %></p>

<h1>Accounts</h1>

<table>
  <thead>
    <tr>
      <th>CustomerName</th>
          <th>Device</th>
      <th>Balance</th>
      <th>Expirationdate</th>
      <th>Accountstatus</th>
      <th>Expiredaccount</th>
      <th>Simcardnumber</th>
      <th>Phonenumber</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
          <td><%= account.customerName %></td>
          <td><%= account.nickname %></td>
        <td><%= account.balance %></td>
        <td><%= account.expirationDate %></td>
        <td><%= account.accountStatus %></td>
        <td><%= account.expiredAccount %></td>
        <td><%= account.simcardNumber %></td>
        <td><%= account.phoneNumber %></td>
        <td><%= link_to 'Show', account %></td>
        <td><%= link_to 'Edit', edit_account_path(account) %></td>
        <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Account', new_account_path %>
<%= button_to "Update Accounts", action: "fetch_balance"%>
